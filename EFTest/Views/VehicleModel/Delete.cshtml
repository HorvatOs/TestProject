@model Vehicle.Models.DeleteModel

@{ ViewData["Title"] = "Delete"; }

<h4>Are you sure you want to delete this Vehicle Model?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Abrv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Abrv)
        </dd>
