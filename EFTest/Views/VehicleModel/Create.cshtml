@model Vehicle.Models.CreateModel


@{ ViewData["Title"] = "Create"; }

<h4> Create Vehicle Model</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="VehicleModel" asp-action="create" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MakeId" class="control-label"></label>
                <input asp-for="MakeId" class="form-control" readonly />
                <span asp-validation-for="MakeId" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <div align="center" class="float-left"><input type="submit" value="Create" class="btn btn-outline-success" /></div>    
                    <div align="center" class="float-right"><a class="btn btn-outline-primary" asp-action="Index" asp-route-makeId="@Model.MakeId">Back</a></div>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
