@model Vehicle.Models.CreateMake

@{ ViewData["Title"] = "Create"; }

<h4> Create Vehicle Make</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="VehicleMake" asp-action="create" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>



            <div class="form-group">
                <div align="center" class="float-left"><input type="submit" value="Create" class="btn btn-outline-success" /></div>
                <div align="center" class="float-right"><a class="btn btn-outline-primary" asp-action="Index">Back</a></div>
            </div>
        </form>
    </div>
</div>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
